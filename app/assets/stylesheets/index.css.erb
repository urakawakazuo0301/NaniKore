body {
  position: relative;
  overflow-x: hidden;
}

.main {
  background-image: url("<%= asset_path('background.png') %>");
  min-height: 100vh;
  background-size: contain;
  background-color: rgba(255,255,255,0.3);
  background-blend-mode:lighten;
  background-attachment: fixed;
  display: flex;
  justify-content: center;
  padding-top: 70px;
}

.search-form {
  position: fixed;
}

.create_btn {
  width: 120px;
  height: 120px;
  background: #708090;
  bottom: 32px;
  right: 32px;
  border-radius: 50%;
  position: fixed;
  padding: 5px 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-decoration: none;
}

.create_btn_text  {
  color: #fff;
  font-size: 15px;
}

.create_btn:hover {
  background-color: #36454F;
}

/* スマホ用スタイル（縦向き） */
@media (max-width: 600px) and (orientation: portrait) {
.main {
    padding: 40px 20px 0 20px;
    box-sizing: border-box;
  }

.search-form {
  position: static;
  width: 100%;
}

.create_btn {
  width: calc(100% - 40px);
  height: 40px;
  background: #708090;
  bottom: 20px;
  right: 20px;
  border-radius: 8px;
  position: fixed;
  padding: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-decoration: none;
}

.create_btn_text {
  color: #fff;
  font-size: 12px;
  white-space: nowrap;
  text-align: center;
}

.create_btn:hover {
  background-color: #36454F;
}
}

/* タブレット用スタイル（縦向き） */
@media (min-width: 601px) and (max-width: 1024px) and (orientation: portrait) {
.main {
  padding: 30px;
  box-sizing: border-box;
}

.search-form {
  position: static;
}

.create_btn {
  width: 100px;
  height: 100px;
  background: #708090;
  bottom: 50px;
  right: 30px;
  border-radius: 50%;
  position: fixed;
  padding: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-decoration: none;
}

.create_btn_text {
  color: #fff;
  font-size: 14px;
  white-space: nowrap;
  text-align: center;
}

.create_btn:hover {
  background-color: #36454F;
}
}