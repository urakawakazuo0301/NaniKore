body {
  overflow: hidden;
}

.main {
  background-image: url("<%= asset_path('background.png') %>");
  height: 100vh;
  background-size: contain;
  background-color: rgba(255,255,255,0.3);
  background-blend-mode:lighten;
  background-attachment: fixed;
  display: flex;
  justify-content: center;
}


.create_btn {
  width: 120px;
  height: 120px;
  background: #708090;
  bottom: 32px;
  right: 32px;
  border-radius: 50%;
  position: fixed;
  padding: 5px 15px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-decoration: none;
}

.create_btn_text  {
  color: #fff;
  font-size: 15px;
}

.create_btn:hover {
  background-color: #36454F;
}

/* スマホ用スタイル（縦向き） */
@media (max-width: 600px) and (orientation: portrait) {

  .create_btn {
    width: 80px;
    height: 80px;
    background: #708090;
    bottom: 20px;
    right: 20px;
    border-radius: 50%;
    position: fixed;
    padding: 5px;
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }

  .create_btn_text {
    color: #fff;
    font-size: 12px;
    white-space: nowrap;
  }

  .create_btn:hover {
