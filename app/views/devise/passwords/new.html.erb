<h2>登録アドレスに送信</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class='field'>
    <div class='field-label'>
      <%= f.label :メールアドレス %>
    </div>
    <div class='field-input'>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "送信" %>
  </div>
<% end %>
